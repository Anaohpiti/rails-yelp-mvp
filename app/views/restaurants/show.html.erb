<%= link_to 'Back', restaurants_path, class: "btn btn-secondary"%>
<%= link_to "Add a review", new_restaurant_review_path(@restaurant), class: "btn btn-secondary"%>

<h1>
  <%= @restaurant.name %>
</h1>

<h2> Details </h2>
<p>
  <strong>Address:</strong>
  <%= @restaurant.address %>
</p>

<p>
  <strong>Category:</strong>
  <%= @restaurant.category %>
</p>

<p>
  <strong>Phone-number:</strong>
  <%= @restaurant.phone_number %>
</p>

<h2>Reviews </h2>
<ul>
  <% @restaurant.reviews.each do |review| %>
    <li><%= review.rating %>/5 - <%= review.content %> </li>
  <% end %>
</ul>
